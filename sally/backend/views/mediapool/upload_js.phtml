$opener = $this->opener;
$format = '';

if ($opener == 'TINYIMG') {
	if (OOMedia::_isImage($file->getFilename())) {
		$format = 'insertImage("%s", "%s");';
	}
}
elseif ($opener == 'TINY') {
	$format = 'insertLink("%s");';
}
elseif ($opener != '') {
	if (substr($opener, 0, 14) == 'REX_MEDIALIST_') {
		$format = 'selectMedialist("%s");';
	}
	else {
		$format = 'selectMedia("%s");';
	}
}

$filename = addslashes($file->getFilename());
$title    = addslashes($file->getTitle());

?>
<script type="text/javascript">
<? printf($format, $filename, $title); ?>
self.close();
</script>
