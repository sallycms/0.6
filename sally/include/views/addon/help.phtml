$service     = $plugin ? $plugins : $addons;
$component   = $plugin ? array($addon, $plugin) : $addon;
$helpfile    = $service->baseFolder($component).'/help.inc.php';
$version     = $service->getVersion($component);
$author      = $service->getAuthor($component);
$supportPage = $service->getSupportPage($component);
$name        = $plugin ? $addon.' / '.$plugin : $addon;
$credits     = t('credits_name').': <span>'.sly_html($name).'</span><br />';

if ($version)     $credits .= t('credits_version').': <span>'.sly_html($version).'</span><br />';
if ($author)      $credits .= t('credits_author').': <span>'.sly_html($author).'</span><br />';
if ($supportPage) $credits .= t('credits_supportpage').': <span><a href="http://'.$supportPage.'" class="sly-blank">'.sly_html($supportPage).'</a></span><br />';

?>
<div class="rex-area">
	<h3 class="rex-hl2"><?= t('addon_help').' '.sly_html($name) ?></h3>
	<div class="rex-area-content">
		<? if (!is_file($helpfile)): ?>
		<p><?= t('addon_no_help_file') ?></p>
		<? else: ?>
		<? include $helpfile ?>
		<? endif ?>
		<br />
		<p id="rex-addon-credits"><?= $credits ?></p>
	</div>
	<div class="rex-area-footer">
		<p><a href="JavaScript:history.back();"><?= t('addon_back') ?></a></p>
	</div>
</div>
