$name     = sly_html($this->getName());
$id       = sly_html($this->getID());
$filename = $this->getDisplayValue();
$value    = sly_Form_Widget_Media::getFullName($filename);

if ($value === '') {
	$filename = '';
}

$filetypeFilter = '';
$categoryFilter = '';

if (!empty($this->filetypes)) {
	$filetypeFilter = ' data-filetypes="'.implode('|', $this->filetypes).'"';
}

if (!empty($this->categories)) {
	$categoryFilter = ' data-categories="'.implode('|', $this->categories).'"';
}

?>

<span class="sly-widget sly-media<?php echo isset($this->attributes['class']) ? ' '.sly_html($this->attributes['class']) : '' ?>"<?php echo $filetypeFilter.$categoryFilter ?>>
	<input class="value" type="hidden" name="<?php echo $name ?>" value="<?php echo sly_html($filename) ?>" />
	<input class="name" type="text" value="<?php echo sly_html($value) ?>" readonly="readonly" id="<?php echo $id ?>" />

	<span class="sly-icons">
		<a href="#" class="fct-open" title="<?php echo t('var_media_open') ?>"></a>
	</span>
	<span class="sly-icons">
		<a href="#" class="fct-add" title="<?php echo t('var_media_new') ?>"></a>
	</span>
	<span class="sly-icons">
		<a href="#" class="fct-delete" title="<?php echo t('var_media_remove') ?>"></a>
	</span>
</span>
