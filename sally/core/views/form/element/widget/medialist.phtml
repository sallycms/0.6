?>
<span class="sly-widget sly-medialist" data-id="<?= $name ?>">
	<input type="hidden" name="<?= $name ?>" id="<?= $id ?>" value="<?= sly_html(implode(',', $files)) ?>" />
	<select size="8" class="<?= $this->attributes['class'] ?>">
		<? foreach ($files as $file): ?>
		<option value="<?= sly_html($file) ?>"><?= sly_html($file) ?></option>
		<? endforeach ?>
