$formRowClass = array('sly-form-row', 'sly-num'.$rowNum, 'sly-monolingual');

foreach ($elements as $element) {
	$formRowClass[] = $element->getFormRowClass();
}

$formRowClass = implode(' ', array_filter($formRowClass));
print '<div class="'.$formRowClass.'">';

for ($col = 0; $col < $columns; ++$col) {
	$element = isset($elements[$col]) ? $elements[$col] : null;
	if ($element === null) continue;

	$column = $col;
	print $this->renderView('element.phtml', compact('column', 'col', 'element', 'formRowClass'));
}

print '</div>';
